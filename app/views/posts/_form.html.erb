<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2>A postagem não pode ser salva</h2>

      <ul class="decorar">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Título, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :Descrição, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit "Enviar" %>
  </div>


<% end %>
