<div id="header">
  <h1 id="title">RubyPost</h1>
</div>

<div id="main">
  <%= render @post %>

  <div id="result">
    <%= link_to "Editar", edit_post_path(@post) %> |
    <%= link_to "Voltar", posts_path %>

    <%= button_to "Remover", @post, method: :delete %>
  </div>

  <p style="color: green"><%= notice %></p>
</div>